<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="80dp"
    android:layout_height="wrap_content" android:layout_margin="4dp"
    android:elevation="2dp" android:background="@color/white"
    android:id="@+id/llGridItem" android:gravity="center"
    android:foreground="?android:attr/selectableItemBackground">

    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:id="@+id/ivNewPassword"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:paddingLeft="1dp"
        android:paddingRight="1dp"
        android:text="test"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="12sp"
        android:id="@+id/tvNewPassword"/>

</LinearLayout>